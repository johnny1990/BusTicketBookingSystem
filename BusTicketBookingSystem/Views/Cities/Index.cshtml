@model IEnumerable <BusTicketBookingSystem.Entities.Models.City>

@{
    ViewBag.Title = "Index";
}

    <h2 class="text-center">Cities List</h2>

<p>
    @Html.ActionLink("New City Route", "Create")
</p>
<table class="table" border="1">
    <tr class="alert-info">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CityId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CityId })
            </td>
        </tr>
    }

</table>
