@model IEnumerable<BusTicketBookingSystem.Entities.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Buses list</h2>

<p>
    @Html.ActionLink("Create New Bus", "Create")
</p>
<table class="table" border="1">
    <tr class="alert-info">
        <th>
            @Html.DisplayNameFor(model => model.NrReg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriverId) 
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NrReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BusId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BusId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BusId })
            </td>
        </tr>
    }

</table>
